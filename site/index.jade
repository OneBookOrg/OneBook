doctype html
html(lang='en')
    html
        head
            title OneBook
            link(href='lib/bootstrap/css/bootstrap.min.css', rel='stylesheet', type='text/css')
            link(href='style/css/signin-signup.css', rel='stylesheet', type='text/css')
            link(href='style/imgs/meta_icons/OB.ico', rel='icon')
            link(href='https://fonts.googleapis.com/css?family=Muli:400,300' rel='stylesheet' type='text/css')
            script(src='js/signin.js' type='text/javascript')
            script(src='http://code.jquery.com/jquery-1.12.0.min.js')
            script(src='http://code.jquery.com/jquery-migrate-1.2.1.min.js')
        
        body.container-fluid
            div#error
            form(name='form-signin', action='', method='POST').form-signin
                h3.form-top-option SIGN IN
                h3.form-top-option
                    a(href='signup.html') SIGN UP
                h2.form-signin-heading Please Sign In
                h4.form-control-title USERNAME
                input(type='username', name='username', value='', required, autofocus)#username.form-control
                h4.form-control-title PASSWORD
                input(type='password', name='password', value='', required)#password.form-control
                div.checkbox
                    label
                        input(type='checkbox', value='remember-me')
                        | Remember me
                input(type='button', value='SIGN IN')#signinSubmit.btn.btn-lg.btn-primary.btn-block